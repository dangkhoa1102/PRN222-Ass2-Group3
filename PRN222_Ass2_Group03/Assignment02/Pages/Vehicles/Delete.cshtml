@page "/Vehicles/Delete/{id}"
@model Assignment02.Pages.Vehicles.DeleteModel
@{
    ViewData["Title"] = "Xóa xe";
}

@section Styles {
    <link rel="stylesheet" href="~/css/vehicles.css" asp-append-version="true" />
    <style>
        .delete-vehicle-page {
            background: linear-gradient(135deg, #2196F3 0%, #4CAF50 100%);
            min-height: 100vh;
            padding: 120px 0 60px 0;
        }
        
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .form-card {
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            position: relative;
        }
        
        .form-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
        }
        
        .form-header {
            background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
            padding: 2rem;
            text-align: center;
            border-bottom: 1px solid #ffcdd2;
        }
        
        .form-title {
            font-size: 2rem;
            font-weight: 700;
            color: #d32f2f;
            margin: 0 0 0.5rem 0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
        }
        
        .form-title i {
            color: #f44336;
            font-size: 1.8rem;
        }
        
        .form-subtitle {
            font-size: 1.1rem;
            color: #666;
            margin: 0;
            font-weight: 400;
        }
        
        .form-body {
            padding: 2.5rem;
        }
        
        .vehicle-preview {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border: 2px solid #e9ecef;
        }
        
        .vehicle-preview h3 {
            color: #2c3e50;
            margin: 0 0 1rem 0;
            font-size: 1.3rem;
        }
        
        .vehicle-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }
        
        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.95rem;
            color: #6c757d;
        }
        
        .detail-item i {
            color: #2196F3;
            font-size: 1rem;
            width: 20px;
        }
        
        .warning-message {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 2rem;
            color: #856404;
        }
        
        .warning-message i {
            color: #f39c12;
            margin-right: 0.5rem;
        }
        
        .form-actions {
            background: #f8f9fa;
            padding: 1.5rem 2.5rem;
            display: flex;
            gap: 1rem;
            justify-content: center;
            border-top: 1px solid #e9ecef;
        }
        
        .btn-cancel {
            background: #6c757d;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }
        
        .btn-cancel:hover {
            background: #5a6268;
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }
        
        .btn-delete {
            background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(244, 67, 54, 0.3);
        }
    </style>
}

<div class="delete-vehicle-page">
    <div class="form-container">
        <div class="form-card">
            <div class="form-header">
                <h1 class="form-title">
                    <i class="fas fa-exclamation-triangle"></i>
                    Xóa xe
                </h1>
                <p class="form-subtitle">Xác nhận xóa xe khỏi hệ thống</p>
            </div>
            
            <form method="post" class="vehicle-form">
                <input type="hidden" asp-for="Vehicle.Id" />
                
                <div class="form-body">
                    <div class="vehicle-preview">
                        <h3>Thông tin xe sẽ bị xóa:</h3>
                        <div class="vehicle-details">
                            <div class="detail-item">
                                <i class="fas fa-car"></i>
                                <span><strong>Tên:</strong> @Model.Vehicle?.Name</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-cog"></i>
                                <span><strong>Model:</strong> @Model.Vehicle?.Model</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-calendar"></i>
                                <span><strong>Năm:</strong> @Model.Vehicle.Year</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-tag"></i>
                                <span><strong>Thương hiệu:</strong> @Model.Vehicle.Brand</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-dollar-sign"></i>
                                <span><strong>Giá:</strong> @Model.Vehicle.Price.ToString("N0") ₫</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="warning-message">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. Tất cả thông tin về xe này sẽ bị xóa vĩnh viễn khỏi hệ thống.
                    </div>
                </div>
                
                <div class="form-actions">
                    <a href="/Vehicles/Index" class="btn-cancel">
                        <i class="fas fa-arrow-left"></i>
                        Hủy bỏ
                    </a>
                    <button type="submit" class="btn-delete">
                        <i class="fas fa-trash"></i>
                        Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Double confirmation for delete
        document.querySelector('.vehicle-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (confirm('Bạn có chắc chắn 100% muốn xóa xe này không?\n\nHành động này KHÔNG THỂ hoàn tác!')) {
                if (confirm('Lần cuối cùng - Bạn có chắc chắn muốn xóa xe "@Model.Vehicle?.Name" không?')) {
                    this.submit();
                }
            }
        });
    </script>
}
