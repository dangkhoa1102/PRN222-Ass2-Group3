@page
@model IndexModel
@{
    ViewData["Title"] = "HomePage";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">
                <i class="fas fa-bolt me-3"></i>
                Welcome, @Model.CurrentUserFullName!
            </h1>
            <p class="hero-subtitle">
                Manage your electric vehicle journey with our comprehensive dealer system
            </p>
        </div>
    </div>
</section>

<style>
    /* Additional gradient button styles */
    .btn-warning-gradient {
        background: linear-gradient(135deg, #FF9800, #FF5722);
        color: white;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-danger-gradient {
        background: linear-gradient(135deg, #F44336, #E91E63);
        color: white;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-purple-gradient {
        background: linear-gradient(135deg, #9C27B0, #673AB7);
        color: white;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-gray-gradient {
        background: linear-gradient(135deg, #607D8B, #455A64);
        color: white;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-warning-gradient:hover,
    .btn-danger-gradient:hover,
    .btn-purple-gradient:hover,
    .btn-gray-gradient:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        color: white;
    }

    .btn-warning-gradient::before,
    .btn-danger-gradient::before,
    .btn-purple-gradient::before,
    .btn-gray-gradient::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s;
    }

    .btn-warning-gradient:hover::before,
    .btn-danger-gradient:hover::before,
    .btn-purple-gradient:hover::before,
    .btn-gray-gradient:hover::before {
        left: 100%;
    }

    /* --- FIX DROPDOWN BỊ HERO CHE --- */

    /* Đảm bảo navbar và dropdown nổi lên trên hero */
    .navbar,
    .dropdown-menu {
        position: relative;
        z-index: 2000 !important;
    }

    /* Hero section nằm thấp hơn layer dropdown */
    .hero-section {
        position: relative;
        z-index: 1 !important;
        margin-top: 120px; /* đẩy xuống cách navbar */
        padding: 100px 0 80px;
        background: linear-gradient(135deg, #00b4d8, #48cae4);
        border-radius: 0 0 40px 40px;
        color: white;
        text-align: center;
        overflow: visible !important; /* Cho phép dropdown vượt qua nếu cần */
    }

        /* Container bên trong hero không chặn dropdown */
        .hero-section .container {
            position: relative;
            z-index: 1;
            overflow: visible !important;
        }

    /* Đảm bảo dropdown không bị ẩn */
    .dropdown-menu.show {
        display: block;
        position: absolute;
        z-index: 3000 !important;
        overflow: visible !important;
    }

    /* Nếu hero có pseudo-element gradient thì đẩy nó xuống dưới cùng */
    .hero-section::before,
    .hero-section::after {
        z-index: 0 !important;
    }


</style>
