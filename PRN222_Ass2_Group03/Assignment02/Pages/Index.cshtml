@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">
                <i class="fas fa-bolt me-3"></i>
                Welcome, @Model.CurrentUserFullName!
            </h1>
            <p class="hero-subtitle">
                Manage your electric vehicle journey with our comprehensive dealer system
            </p>
            <div class="user-stats mt-4">
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <div class="stat-item">
                            <i class="fas fa-user-circle fa-2x mb-2"></i>
                            <h6>@Model.CurrentUsername</h6>
                            <small>@Model.CurrentUserRole</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Dashboard Cards -->
<div class="container">
    <div class="row g-4">
        <!-- Vehicle Catalog Card -->
        <div class="col-lg-4 col-md-6">
            <div class="dashboard-card">
                <div class="dashboard-card-icon">
                    <i class="fas fa-car-alt"></i>
                </div>
                <h5 class="dashboard-card-title">Vehicle Catalog</h5>
                <p class="dashboard-card-text">
                    Explore our extensive collection of cutting-edge electric vehicles with detailed specifications and competitive pricing.
                </p>
                <a href="#vehicles" class="btn btn-modern-primary">
                    <i class="fas fa-search me-2"></i>Browse Vehicles
                </a>
            </div>
        </div>

        <!-- Test Drive Card -->
        <div class="col-lg-4 col-md-6">
            <div class="dashboard-card">
                <div class="dashboard-card-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h5 class="dashboard-card-title">Schedule Test Drive</h5>
                <p class="dashboard-card-text">
                    Experience the future of driving by scheduling a test drive for any electric vehicle that catches your interest.
                </p>
                <a href="#appointments" class="btn btn-modern-success">
                    <i class="fas fa-calendar-plus me-2"></i>Book Now
                </a>
            </div>
        </div>

        <!-- Orders Card -->
        <div class="col-lg-4 col-md-6">
            <div class="dashboard-card">
                <div class="dashboard-card-icon">
                    <i class="fas fa-shopping-bag"></i>
                </div>
                <h5 class="dashboard-card-title">My Orders</h5>
                <p class="dashboard-card-text">
                    Track your purchase history, monitor current orders, and manage your electric vehicle transactions.
                </p>
                <a href="#orders" class="btn btn-modern-secondary">
                    <i class="fas fa-list me-2"></i>View Orders
                </a>
            </div>
        </div>

        <!-- Communication Card -->
        <div class="col-lg-6 col-md-6">
            <div class="dashboard-card">
                <div class="dashboard-card-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <h5 class="dashboard-card-title">Real-time Communication</h5>
                <p class="dashboard-card-text">
                    Connect instantly with dealers, sales representatives, and other customers through our integrated chat system.
                </p>
                <a href="/Chat" class="btn btn-modern-primary">
                    <i class="fas fa-comment-dots me-2"></i>Open Chat
                </a>
            </div>
        </div>

        <!-- Profile Card -->
        <div class="col-lg-6 col-md-6">
            <div class="dashboard-card">
                <div class="dashboard-card-icon">
                    <i class="fas fa-user-cog"></i>
                </div>
                <h5 class="dashboard-card-title">Profile Management</h5>
                <p class="dashboard-card-text">
                    Update your personal information, preferences, and account settings to personalize your experience.
                </p>
                <a href="#profile" class="btn btn-modern-secondary">
                    <i class="fas fa-edit me-2"></i>Edit Profile
                </a>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="modern-card">
                <div class="card-header-modern">
                    <h4 class="mb-0">
                        <i class="fas fa-rocket me-2"></i>Quick Actions & Notifications
                    </h4>
                </div>
                <div class="card-body-modern">
                    <p class="text-muted mb-4">Test our real-time notification system with these interactive buttons:</p>
                    
                    <div class="row g-3">
                        <div class="col-lg-2 col-md-4 col-6">
                            <button class="btn btn-modern-primary w-100" onclick="sendNotification('Info', 'System information updated successfully!', 'info')">
                                <i class="fas fa-info-circle mb-2 d-block"></i>
                                <small>Info Alert</small>
                            </button>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <button class="btn btn-modern-success w-100" onclick="sendNotification('Success', 'Your action completed successfully!', 'success')">
                                <i class="fas fa-check-circle mb-2 d-block"></i>
                                <small>Success</small>
                            </button>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <button class="btn w-100 btn-warning-gradient" onclick="sendNotification('Warning', 'Please check your account settings', 'warning')">
                                <i class="fas fa-exclamation-triangle mb-2 d-block"></i>
                                <small>Warning</small>
                            </button>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <button class="btn w-100 btn-danger-gradient" onclick="sendNotification('Error', 'An error occurred, please try again', 'error')">
                                <i class="fas fa-times-circle mb-2 d-block"></i>
                                <small>Error</small>
                            </button>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <button class="btn w-100 btn-purple-gradient" onclick="sendSystemMessage('System maintenance scheduled for tonight at 11 PM')">
                                <i class="fas fa-broadcast-tower mb-2 d-block"></i>
                                <small>System Msg</small>
                            </button>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <form method="post" asp-page-handler="Logout" class="w-100">
                                <button type="submit" class="btn w-100 btn-gray-gradient">
                                    <i class="fas fa-sign-out-alt mb-2 d-block"></i>
                                    <small>Logout</small>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="modern-card">
                <div class="card-header-modern">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>Platform Statistics
                    </h4>
                </div>
                <div class="card-body-modern">
                    <div class="row text-center">
                        <div class="col-md-3 col-6">
                            <div class="stat-box">
                                <i class="fas fa-car fa-3x mb-3 text-primary"></i>
                                <h3 class="fw-bold">250+</h3>
                                <p class="text-muted">Electric Vehicles</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="stat-box">
                                <i class="fas fa-users fa-3x mb-3 text-success"></i>
                                <h3 class="fw-bold">1,500+</h3>
                                <p class="text-muted">Happy Customers</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="stat-box">
                                <i class="fas fa-store fa-3x mb-3 text-primary"></i>
                                <h3 class="fw-bold">50+</h3>
                                <p class="text-muted">Dealer Partners</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="stat-box">
                                <i class="fas fa-leaf fa-3x mb-3 text-success"></i>
                                <h3 class="fw-bold">100%</h3>
                                <p class="text-muted">Eco-Friendly</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Additional gradient button styles */
    .btn-warning-gradient {
        background: linear-gradient(135deg, #FF9800, #FF5722);
        color: white;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-danger-gradient {
        background: linear-gradient(135deg, #F44336, #E91E63);
        color: white;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-purple-gradient {
        background: linear-gradient(135deg, #9C27B0, #673AB7);
        color: white;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-gray-gradient {
        background: linear-gradient(135deg, #607D8B, #455A64);
        color: white;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-warning-gradient:hover,
    .btn-danger-gradient:hover,
    .btn-purple-gradient:hover,
    .btn-gray-gradient:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        color: white;
    }

    .btn-warning-gradient::before,
    .btn-danger-gradient::before,
    .btn-purple-gradient::before,
    .btn-gray-gradient::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s;
    }

    .btn-warning-gradient:hover::before,
    .btn-danger-gradient:hover::before,
    .btn-purple-gradient:hover::before,
    .btn-gray-gradient:hover::before {
        left: 100%;
    }
</style>
