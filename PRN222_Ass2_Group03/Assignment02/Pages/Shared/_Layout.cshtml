<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EV Dealer System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dropdown-fix.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dropdown-override.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment02.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top modern-navbar">
            <div class="container">
                <a class="navbar-brand modern-brand" asp-area="" asp-page="/Index">
                    <div class="brand-icon">
                        <i class="fas fa-bolt"></i>
                    </div>
                    <span class="brand-text">EV Dealer System</span>
                </a>

                <div class="collapse navbar-collapse show" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @{
                            var userId = Context.Session.GetString("UserId");
                            var username = Context.Session.GetString("Username");
                            var fullName = Context.Session.GetString("FullName");
                            var userRole = Context.Session.GetString("Role");
                            bool isAuthenticated = !string.IsNullOrEmpty(userId);
                        }

                        @if (isAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link modern-nav-link dropdown-toggle" href="#" role="button" aria-expanded="false">
                                    <i class="fas fa-car"></i>
                                    <span>Vehicles</span>
                                </a>
                                <ul class="dropdown-menu vehicles-dropdown">
                                    <li>
                                        <a class="dropdown-item" asp-page="/Vehicles/Index">
                                            <i class="fas fa-cogs"></i>
                                            <div>
                                                <div class="item-title">Manage Vehicles</div>
                                                <div class="item-desc">CRUD operations for vehicles</div>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link modern-nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-calendar-check"></i>
                                    <span>Test Drives</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-page="/BookTestDrive">
                                            <i class="fas fa-calendar-plus"></i>
                                            <span>Schedule Test Drive</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/MyAppointment">
                                            <i class="fas fa-list"></i>
                                            <span>My Appointments</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/TestDrives/History">
                                            <i class="fas fa-history"></i>
                                            <span>Test Drive History</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            @if (string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase) || string.Equals(userRole, "Staff", StringComparison.OrdinalIgnoreCase))
                            {
                                <li class="nav-item">
                                    <a class="nav-link modern-nav-link" href="/Admin/ManageAppointments">
                                        <i class="fas fa-clipboard-list"></i>
                                        <span>Manage Appointments</span>
                                    </a>
                                </li>
                            }
                            
                            <!-- Orders Menu for all authenticated users -->
                            <li class="nav-item dropdown">
                                <a class="nav-link modern-nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-shopping-bag"></i>
                                    <span>Orders</span>
                                </a>
                                <ul class="dropdown-menu">
                                    @if (string.Equals(userRole, "Customer", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-page="/Orders/CreateCus">
                                                <i class="fas fa-plus-circle"></i>
                                                <span>Create New Order</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Orders/MyOrders">
                                                <i class="fas fa-receipt"></i>
                                                <span>My Orders</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Orders/PendingOrdersCus">
                                                <i class="fas fa-hourglass-half"></i>
                                                <span>Processing Orders</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Orders/HistoryCus">
                                                <i class="fas fa-history"></i>
                                                <span>Order History</span>
                                            </a>
                                        </li>
                                    }
                                    @if (string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase) || string.Equals(userRole, "Staff", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/ManageOrders">
                                                <i class="fas fa-cogs"></i>
                                                <span>Manage Orders</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link modern-nav-link" asp-area="" asp-page="/Login">
                                    <i class="fas fa-sign-in-alt"></i>
                                    <span>Login</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link modern-nav-link" asp-area="" asp-page="/Register">
                                    <i class="fas fa-user-plus"></i>
                                    <span>Register</span>
                                </a>
                            </li>
                        }
                    </ul>

                    @if (isAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle modern-user-menu" href="#" id="navbarDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar">
                                        <i class="fas fa-user-circle"></i>
                                    </div>
                                    <div class="user-info">
                                        <span class="user-name">@(fullName ?? username)</span>
                                        <small class="user-role">@userRole</small>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end modern-dropdown" aria-labelledby="navbarDropdown">
                                    @if (string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase) || string.Equals(userRole, "Staff", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <li>
                                            <a class="dropdown-item modern-dropdown-item" href="/Admin/ManageAppointments">
                                                <i class="fas fa-cogs"></i>
                                                <span>Manage Appointments</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item modern-dropdown-item" href="/Admin/ManageOrders">
                                                <i class="fas fa-shopping-cart"></i>
                                                <span>Manage Orders</span>
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <a class="dropdown-item modern-dropdown-item" href="/MyAppointment">
                                            <i class="fas fa-calendar"></i>
                                            <span>My Appointments</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item modern-dropdown-item" href="#profile">
                                            <i class="fas fa-user-edit"></i>
                                            <span>Profile</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item modern-dropdown-item" href="#settings">
                                            <i class="fas fa-cog"></i>
                                            <span>Settings</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item modern-dropdown-item" href="#notifications">
                                            <i class="fas fa-bell"></i>
                                            <span>Notifications</span>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-page="/Logout" class="d-inline w-100">
                                            <button type="submit" class="dropdown-item modern-dropdown-item logout-btn">
                                                <i class="fas fa-sign-out-alt"></i>
                                                <span>Logout</span>
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
    {
        <!-- Notification container for authenticated users -->
        <div id="notificationContainer" style="position: fixed; top: 100px; right: 20px; z-index: 1050; max-width: 350px;">
            <!-- Notifications will be inserted here -->
        </div>
    }

    <main style="padding-top: 100px; min-height: calc(100vh - 160px);">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <footer class="footer modern-footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 EV Dealer System - Powering the Future</p>
                </div>
                <div class="col-md-6 text-end">
                    <a href="#" class="footer-link me-3">
                        <i class="fas fa-shield-alt"></i>
                        <span>Security</span>
                    </a>
                    <a asp-area="" asp-page="/Privacy" class="footer-link me-3">
                        <i class="fas fa-user-shield"></i>
                        <span>Privacy Policy</span>
                    </a>
                    <a href="#" class="footer-link">
                        <i class="fas fa-info-circle"></i>
                        <span>About</span>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
    {
        <script src="~/lib/microsoft-signalr/signalr.min.js"></script>
        <script src="~/js/signalr-notifications.js" asp-append-version="true"></script>
    }

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Enhanced navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.modern-navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add animation to cards on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-fade-in-up');
                }
            });
        }, observerOptions);

        // Observe all cards when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.dashboard-card, .modern-card, .animate-on-scroll');
            cards.forEach(card => observer.observe(card));
        });

        // Enhanced dropdown hover functionality - FORCE DROPDOWN TO WORK
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Bootstrap dropdowns
            const dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
            const dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                return new bootstrap.Dropdown(dropdownToggleEl);
            });

            const dropdownItems = document.querySelectorAll('.nav-item.dropdown');

            dropdownItems.forEach(function(item) {
                const dropdownMenu = item.querySelector('.dropdown-menu');
                const dropdownToggle = item.querySelector('.dropdown-toggle');
                let hoverTimeout;

                // Force dropdown z-index
                if (dropdownMenu) {
                    dropdownMenu.style.zIndex = '999999';
                    dropdownMenu.style.position = 'absolute';
                }

                // Click functionality for mobile/tablet
                if (dropdownToggle) {
                    dropdownToggle.addEventListener('click', function(e) {
                        e.preventDefault();
                        if (window.innerWidth <= 991) {
                            const bsDropdown = bootstrap.Dropdown.getInstance(this) || new bootstrap.Dropdown(this);
                            bsDropdown.toggle();
                        }
                    });
                }

                // Desktop hover effect
                item.addEventListener('mouseenter', function() {
                    if (window.innerWidth > 991) {
                        clearTimeout(hoverTimeout);
                        if (dropdownMenu) {
                            dropdownMenu.classList.add('show');
                            dropdownToggle.classList.add('show');
                            dropdownToggle.setAttribute('aria-expanded', 'true');
                        }
                    }
                });

                item.addEventListener('mouseleave', function() {
                    if (window.innerWidth > 991) {
                        hoverTimeout = setTimeout(function() {
                            if (dropdownMenu) {
                                dropdownMenu.classList.remove('show');
                                dropdownToggle.classList.remove('show');
                                dropdownToggle.setAttribute('aria-expanded', 'false');
                            }
                        }, 300); // 300ms delay before hiding
                    }
                });

                // Keep dropdown open when hovering over the dropdown menu itself
                if (dropdownMenu) {
                    dropdownMenu.addEventListener('mouseenter', function() {
                        if (window.innerWidth > 991) {
                            clearTimeout(hoverTimeout);
                        }
                    });

                    dropdownMenu.addEventListener('mouseleave', function() {
                        if (window.innerWidth > 991) {
                            hoverTimeout = setTimeout(() => {
                                this.classList.remove('show');
                                dropdownToggle.classList.remove('show');
                                dropdownToggle.setAttribute('aria-expanded', 'false');
                            }, 200);
                        }
                    });
                }
            });

            // Force all dropdowns to have high z-index
            const allDropdowns = document.querySelectorAll('.dropdown-menu');
            allDropdowns.forEach(function(dropdown) {
                dropdown.style.zIndex = '999999';
                dropdown.style.position = 'absolute';
            });
        });
    </script>
</body>
</html>