@page "/Orders/Payment/{id}"
@model Assignment02.Pages.Orders.PaymentModel
@{
    ViewData["Title"] = "Thanh toán đơn hàng";
}

<style>
    body {
        background-color: #f4f6f9;
    }

    .payment-container {
        max-width: 600px;
        margin: 40px auto;
        background: #fff;
        border-radius: 12px;
        padding: 30px 40px;
        box-shadow: 0 3px 12px rgba(0, 0, 0, 0.1);
    }

    .payment-header {
        text-align: center;
        color: #007bff;
        font-weight: 700;
        margin-bottom: 25px;
    }

    .order-summary {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 25px;
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        font-size: 1.05rem;
    }

    .summary-item.total {
        border-top: 2px solid #007bff;
        padding-top: 10px;
        font-weight: 700;
        font-size: 1.2rem;
        color: #007bff;
    }

    .payment-methods {
        margin-bottom: 25px;
    }

    .payment-method {
        display: flex;
        align-items: center;
        padding: 15px;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        margin-bottom: 10px;
        cursor: pointer;
        transition: 0.2s;
    }

    .payment-method:hover {
        border-color: #007bff;
        background-color: #f8f9ff;
    }

    .payment-method.selected {
        border-color: #007bff;
        background-color: #e3f2fd;
    }

    .payment-method input[type="radio"] {
        margin-right: 10px;
    }

    .btn-pay {
        width: 100%;
        background: linear-gradient(45deg, #28a745, #20c997);
        border: none;
        color: white;
        font-weight: 600;
        padding: 15px;
        border-radius: 8px;
        font-size: 1.1rem;
        transition: 0.2s;
        cursor: pointer;
    }

    .btn-pay:hover {
        transform: scale(1.02);
        background: linear-gradient(45deg, #20c997, #28a745);
    }

    .btn-pay:disabled {
        background: #6c757d;
        cursor: not-allowed;
        transform: none;
    }

    .alert {
        margin-top: 20px;
        border-radius: 8px;
        font-weight: 500;
        text-align: center;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .btn-back {
        background: linear-gradient(45deg, #6c757d, #495057);
        color: #fff;
        border: none;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 8px;
        transition: 0.2s;
        text-decoration: none;
        display: inline-block;
        margin-top: 15px;
    }

    .btn-back:hover {
        transform: scale(1.05);
        background: linear-gradient(45deg, #495057, #6c757d);
        color: white;
    }
</style>

@if (Model.Order == null)
{
    <div class="alert alert-danger text-center mt-5">Đơn hàng không tồn tại.</div>
}
else
{
    <div class="payment-container">
        <h2 class="payment-header">Thanh toán đơn hàng</h2>

        <div class="order-summary">
            <h4>Thông tin đơn hàng</h4>
            <div class="summary-item">
                <span>Mã đơn hàng:</span>
                <span>@Model.Order.OrderNumber</span>
            </div>
            <div class="summary-item">
                <span>Xe:</span>
                <span>@Model.Order.Vehicle?.Name</span>
            </div>
            <div class="summary-item">
                <span>Đại lý:</span>
                <span>@Model.Order.Dealer?.Name</span>
            </div>
            <div class="summary-item total">
                <span>Tổng tiền:</span>
                <span>@Model.Order.TotalAmount.ToString("N0") ₫</span>
            </div>
        </div>

        <form method="post">
            <div class="payment-methods">
                <h4>Chọn phương thức thanh toán</h4>
                <label class="payment-method">
                    <input type="radio" name="PaymentMethod" value="CreditCard" checked />
                    <i class="fas fa-credit-card"></i>
                    <span style="margin-left: 10px;">Thẻ tín dụng</span>
                </label>
                <label class="payment-method">
                    <input type="radio" name="PaymentMethod" value="BankTransfer" />
                    <i class="fas fa-university"></i>
                    <span style="margin-left: 10px;">Chuyển khoản ngân hàng</span>
                </label>
                <label class="payment-method">
                    <input type="radio" name="PaymentMethod" value="Cash" />
                    <i class="fas fa-money-bill"></i>
                    <span style="margin-left: 10px;">Tiền mặt</span>
                </label>
            </div>

            <button type="submit" class="btn-pay" id="payButton">
                <i class="fas fa-check"></i> Xác nhận thanh toán
            </button>
        </form>

        <div class="text-center">
            <a href="javascript:history.back()" class="btn btn-back">← Quay lại</a>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">@Model.SuccessMessage</div>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }
    </div>
}

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const paymentMethods = document.querySelectorAll('.payment-method');
        const payButton = document.getElementById('payButton');
        
        paymentMethods.forEach(method => {
            method.addEventListener('click', function() {
                paymentMethods.forEach(m => m.classList.remove('selected'));
                this.classList.add('selected');
            });
        });

        // Auto-select first payment method
        if (paymentMethods.length > 0) {
            paymentMethods[0].classList.add('selected');
        }

        // Handle form submission
        document.querySelector('form').addEventListener('submit', function(e) {
            payButton.disabled = true;
            payButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang xử lý...';
        });
    });
</script>
