@page
@model Assignment02.Pages.MyAppointmentModel
@{
    ViewData["Title"] = "My Test Drive Appointments";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EV Dealer System</title>
    <link rel="stylesheet" href="~/css/myAppointments.css" asp-append-version="true" />
</head>

<h1>My Test Drive Appointments</h1>

<!-- Hiển thị thông báo lỗi nếu có -->
@if (!ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

@if (Model.Appointments.Any())
{
    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Dealer</th>
                        <th>Vehicle</th>
                        <th>Image</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model.Appointments)
                    {
                        <tr>
                            <td>@appointment.Dealer?.Name</td>
                            <td>@appointment.Vehicle?.Name</td>
                            <td>
                                @if (!string.IsNullOrEmpty(appointment.Vehicle?.Images))
                                {
                                    <img src="@appointment.Vehicle.Images" alt="Vehicle Image" style="max-width: 100px; max-height: 100px;" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>@appointment.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@appointment.Status</td>
                            <td>@appointment.Notes</td>
                            <td>
                                @if (appointment.Status != null && appointment.Status != "Cancelled" && appointment.AppointmentDate > DateTime.Now.AddHours(24))
                                {
                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#cancelModal-@appointment.Id">
                                        Cancel
                                    </button>

                                    <!-- Modal for cancellation -->
                                    <div class="modal fade" id="cancelModal-@appointment.Id" tabindex="-1" aria-labelledby="cancelModalLabel-@appointment.Id" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="cancelModalLabel-@appointment.Id">Cancel Appointment</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <form asp-page-handler="Cancel" asp-route-id="@appointment.Id" method="post">
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to cancel this appointment?</p>
                                                        <div class="mb-3">
                                                            <label for="cancelNote-@appointment.Id" class="form-label">Reason for cancellation</label>
                                                            <textarea class="form-control" id="cancelNote-@appointment.Id" name="CancelNote" rows="4" required></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-danger">Confirm Cancel</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p>No appointments found.</p>
}

<a asp-page="/BookTestDrive" class="btn btn-success">Book New Appointment</a>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}